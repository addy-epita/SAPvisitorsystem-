# =============================================================================
# SAP Visitor Management System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values.
# DO NOT commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
APP_ENV=production
APP_DEBUG=false

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=3306
DB_NAME=visitor_system
DB_USER=visitor_user
DB_PASS=your_secure_password_here

# -----------------------------------------------------------------------------
# Site Configuration
# -----------------------------------------------------------------------------
SITE_URL=https://visitors.yourcompany.com
SITE_NAME=SAP Office
COMPANY_NAME=SAP
TIMEZONE=Europe/Paris
DEFAULT_LANGUAGE=fr

# -----------------------------------------------------------------------------
# Microsoft Graph API Configuration (for email notifications)
# -----------------------------------------------------------------------------
MS_GRAPH_ENABLED=true
MS_GRAPH_TENANT_ID=your-tenant-id-here
MS_GRAPH_CLIENT_ID=your-client-id-here
MS_GRAPH_CLIENT_SECRET=your-client-secret-here
MS_GRAPH_FROM_EMAIL=visitors@yourcompany.com
MS_GRAPH_FROM_NAME=Visitor Management System

# -----------------------------------------------------------------------------
# SMTP Fallback Configuration (if MS Graph is not used)
# -----------------------------------------------------------------------------
SMTP_ENABLED=false
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_ENCRYPTION=tls

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-32-character-encryption-key-here

SESSION_NAME=VMS_Session
SESSION_LIFETIME=1800
SESSION_SECURE=true

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_KIOSK_MODE=true
FEATURE_QR_CHECKOUT=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_REMINDERS=true
FEATURE_ESCALATION=true
FEATURE_SSO_LOGIN=true
FEATURE_LOCAL_LOGIN=true
FEATURE_DATA_RETENTION=true
FEATURE_AUDIT_LOG=true
FEATURE_MAINTENANCE_MODE=false

# -----------------------------------------------------------------------------
# Optional: Third-party Integrations
# -----------------------------------------------------------------------------
# Twilio SMS (optional)
# TWILIO_ENABLED=false
# TWILIO_SID=your-twilio-sid
# TWILIO_TOKEN=your-twilio-token
# TWILIO_FROM_NUMBER=your-twilio-number

# WhatsApp Business API (optional)
# WHATSAPP_ENABLED=false
# WHATSAPP_API_KEY=your-whatsapp-api-key
