# =============================================================================
# SAP Visitor Management System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values.
# Never commit the .env file to version control!
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_ENV=production
APP_DEBUG=false
APP_URL=https://visitors.sap.example.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=visitor_management
DB_USER=visitor_app
DB_PASS=your_secure_database_password_here
DB_PERSISTENT=true
DB_TIMEOUT=30

# =============================================================================
# MICROSOFT GRAPH API (for email notifications)
# =============================================================================
# To set up:
# 1. Register app in Azure AD
# 2. Grant Mail.Send permission (Application type)
# 3. Create client secret
GRAPH_API_ENABLED=false
GRAPH_TENANT_ID=your-tenant-id-here
GRAPH_CLIENT_ID=your-client-id-here
GRAPH_CLIENT_SECRET=your-client-secret-here

# =============================================================================
# SMTP FALLBACK (if Graph API is not used)
# =============================================================================
SMTP_ENABLED=false
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=visitors@sap.example.com
SMTP_PASS=your_smtp_password
SMTP_ENCRYPTION=tls
SMTP_AUTH=true

# =============================================================================
# EMAIL SETTINGS
# =============================================================================
EMAIL_FROM_NAME=SAP Visitor System
EMAIL_FROM_ADDRESS=visitors@sap.example.com
EMAIL_REPLY_TO=

# Comma-separated list of supervisor emails for escalations
SUPERVISOR_EMAILS=supervisor1@sap.example.com,supervisor2@sap.example.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your_base64_encoded_32_byte_key_here

# Session settings
SESSION_LIFETIME=28800
SESSION_SECURE=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Require HTTPS
REQUIRE_HTTPS=true

# =============================================================================
# SITE SETTINGS
# =============================================================================
DEFAULT_TIMEZONE=Europe/Paris
DEFAULT_LOCALE=fr_FR

# =============================================================================
# KIOSK SETTINGS
# =============================================================================
KIOSK_AUTO_REDIRECT_SECONDS=30
KIOSK_IDLE_TIMEOUT_MINUTES=5

# =============================================================================
# DATA RETENTION (GDPR)
# =============================================================================
DATA_RETENTION_DAYS=365
AUTO_ANONYMIZE=true

# =============================================================================
# MAINTENANCE
# =============================================================================
# Set to true to show maintenance page
MAINTENANCE_MODE=false
